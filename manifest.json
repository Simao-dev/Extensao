{
  "manifest_version": 3,
  "name": "Ferramentas de Captura e Impressão",
  "version": "1.0",
  "description": "Extensão com botões para Capturar Tela e Imprimir Etiqueta.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "content_scripts": [ 
    {
      "matches": ["<all_urls>"],
      "js": ["selector.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["selector.html"], 
      "matches": ["<all_urls>"]
    }
  ]
}